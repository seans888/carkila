<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.prototype.carkila.Renter.RenterHome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linearLayout">

                <!--Logo-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:src="@drawable/logo" />

                </LinearLayout>

                <!--1st Row-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:paddingTop="15dp">

                    <android.support.v7.widget.CardView
                        android:id="@+id/browse_btn"
                        android:layout_width="260dp"
                        android:layout_height="120dp"
                        android:layout_margin="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="#7FCED7"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:padding="13dp"
                                android:src="@drawable/ic_search" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:gravity="center"
                                android:textColor="#fff "
                                android:text="Browse Vehicles" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <!--2nd row-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:clipToPadding="false"
                    android:gravity="center">

                    <!--Notifications-->
                    <android.support.v7.widget.CardView
                        android:id="@+id/notificationsR_btn"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="#7FCED7"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:padding="13dp"
                                android:src="@drawable/ic_notifications_white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:textColor="#fff"
                                android:text="Notifications" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                    <!--Messages-->
                    <android.support.v7.widget.CardView
                        android:id="@+id/messagesR_btn"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="#7FCED7"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:padding="13dp"
                                android:src="@drawable/ic_message_white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:gravity="center"
                                android:textColor="#fff"
                                android:text="Messages" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                </LinearLayout>

                <!--3rd Row-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:clipToPadding="false"
                    android:gravity="center">

                    <!--Trip History-->
                    <android.support.v7.widget.CardView
                        android:id="@+id/trips_btn"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="#7FCED7"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:padding="13dp"
                                android:src="@drawable/vehicle" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:gravity="center"
                                android:textColor="#fff"
                                android:text="Trip History" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                    <!--Profile-->
                    <android.support.v7.widget.CardView
                        android:id="@+id/profileR_btn"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="#7FCED7"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:padding="13dp"
                                android:src="@drawable/ic_profile" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:textColor="#fff"
                                android:text="Profile" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <!--4th Row-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:clipToPadding="false"
                    android:gravity="center">

                    <!--Sign Out-->
                    <android.support.v7.widget.CardView
                        android:id="@+id/signoutR_btn"
                        android:layout_width="260dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="#7FCED7"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:gravity="center"
                                android:textColor="#fff"
                                android:text="Sign Out" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</RelativeLayout>
