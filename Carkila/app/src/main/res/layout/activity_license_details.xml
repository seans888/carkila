<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        tools:context=".Owner.LicenseDetails">

    <!--Header-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/linearLayout"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="1dp"
                android:gravity="center">

                <!--License details-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="License Details"
                    android:textColor="#82BBBF"
                    android:textSize="25dp"
                    android:layout_marginTop="10dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <!--sub-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Please fill up the following: "
                        android:textStyle="bold"
                        android:textColor="#AAB4B5"/>
            </LinearLayout>

                <!--License Number field-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp">
                <EditText
                    android:id="@+id/TFLicenseNum"
                    android:layout_width="240dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edittextstyle2"
                    android:hint="License Number"
                    android:textColorHint="#C7C7C7"
                    android:textColor="#000"
                    android:textSize="12dp"
                    android:layout_marginLeft= "10dp"/>

            </LinearLayout>

                <!--License expiry-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="20dp">
                    <EditText
                        android:id="@+id/TFLicenseExp"
                        android:layout_width="240dp"
                        android:layout_height="40dp"
                        android:background="@drawable/edittextstyle2"
                        android:hint="License expiry (mm-dd--yyyy)"
                        android:textColor="#000"
                        android:textColorHint="#C7C7C7"
                        android:textSize="12dp"
                        android:layout_marginLeft= "10dp"
                        android:inputType="date"/>

                </LinearLayout>
            </LinearLayout>

            <!--Done Button-->
                <Button
                android:id="@+id/done_btn"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:text="Done"
                android:textColor="#fff"
                android:background="@drawable/buttonstyle1" />
        </LinearLayout>

    </RelativeLayout>
