<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.firebasestorageexample.MainActivity">

    <LinearLayout
        android:layout_width="145dp"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:id="@+id/linearLayout2">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:src="@drawable/logoapp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="15dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/linearLayout2"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/linearLayout3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to,"
            android:gravity="center"
            android:textSize="29sp"
            android:fontFamily="monospace"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HaKai"
            android:textSize="29sp"
            android:fontFamily="serif"
            android:textStyle="italic"
            android:textColor="@color/colorPrimary"
            android:id="@+id/textView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App"
            android:textSize="19sp"
            android:fontFamily="monospace"
            android:layout_gravity="start"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="135dp"
        android:gravity="center"
        android:id="@+id/layout1"
        android:layout_marginBottom="30dp"
        >

        <Button
            android:layout_width="335dp"
            android:layout_height="105dp"
            android:textColor="@color/colorWhite"
            android:textSize="23sp"
            android:fontFamily="monospace"
            android:id="@+id/btnSearch"
            android:text="Search"
            android:gravity="start|center_vertical"
            android:drawableEnd="@drawable/ic_search"
            android:paddingStart="25dp"
            android:paddingEnd="7dp"
            android:background="@drawable/button_search"
            android:layout_marginTop="1dp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/layout1"
        android:layout_marginStart="10dp"
        android:id="@+id/layout2"
        android:layout_marginLeft="10dp">

        <Button
            android:text="Food Category"
            android:layout_width="160dp"
            android:layout_height="140dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_checklist"
            android:fontFamily="sans-serif-condensed"
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/btnCategory"
            android:drawableTop="@drawable/ic_checklist"
            android:paddingTop="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            fab:ignore="ButtonStyle"
            android:layout_marginLeft="15dp" />

        <Button
            android:text="Map"
            android:layout_width="160dp"
            android:layout_height="140dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:id="@+id/btnMap"
            android:drawableTop="@drawable/ic_bulb"
            android:paddingTop="40dp"
            android:fontFamily="sans-serif-condensed"
            android:textSize="15sp"
            android:background="@drawable/button_healthtips"
            android:layout_marginStart="5dp"
            android:layout_marginTop="6dp"
            fab:ignore="ButtonStyle" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/sign_out"
        style="?android:textAppearanceSmall"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="@string/btn_sign_out"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="456dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>